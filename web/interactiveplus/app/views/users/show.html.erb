<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
		<%= link_to 'Add Quiz', new_user_quiz_path(current_user), class: "btn btn-primary"%>
	</aside>
	<div class="col-md-4">
	    <% if @user.quizzes.any? %>
	    	<h3>My Quizzes (<%= @user.quizzes.count %>)</h3>
	      	<ol class="quizzes">
	        	<%= render @quizzes %>
	      	</ol>
	      	<%= will_paginate @quizzes %>
	    <% end %>
  	</div>
	<div class="col-md-4">
	    <% if @user.results.any? %>
	    	<h3>My Results (<%= @user.results.count %>)</h3>
	      	<ol class="results">
	        	<%= render "result_stats" %>
	      	</ol>
	      	<%= will_paginate @results %>
	    <% end %>
  	</div>

</div>
