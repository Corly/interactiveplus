<% provide(:title, @quiz.name) %>
<div class="row">
	<aside class="col-md-7">
		<section class="user_info">
			<h1>
				<%= @quiz.name %>
			</h1>
			<br />
			<%= column_chart @all_results.group(:link).sum(:total_number_of_correct_answers) %>
			<br />
		</section>
	</aside>
	<div class="col-md-3">
	    <% if @quiz.results.any? %>
	    	<h3>Results (<%= @quiz.results.count %>)</h3>
	      	<ol class="quizzes">
	        	<%= render @results %>
	      	</ol>
	      	<%= will_paginate @results %>
	    <% end %>
  	</div>
</div>