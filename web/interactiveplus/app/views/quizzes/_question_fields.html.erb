<fieldset>
    <%= f.label :content, "Question" %><br />
    <%= f.text_area :content %><br />
    <div style="display=inline">
        <%= radio_button_tag(:question_type, "single_answer") %>
        <%= label_tag(:question_type_single_answer, "Single answer") %>
        <%= radio_button_tag(:question_type, "multiple_answer") %>
        <%= label_tag(:question_type_multiple_answer, "Multiple answers") %>
        <%= radio_button_tag(:question_type, "free_answer") %>
        <%= label_tag(:question_type_free_answer, "Free answer") %>
    </div>
    <%= f.hidden_field :_destroy %>
    <%= link_to "remove", '#', class: "remove_fields" %>
    <%= f.fields_for :answers do |builder| %>
        <%= render 'answer_fields', f: builder %>
    <% end %>
    <%= link_to_add_fields "Add Answer", f, :answers %>
</fieldset>
