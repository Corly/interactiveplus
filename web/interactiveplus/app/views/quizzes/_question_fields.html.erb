<fieldset>
    <%= f.label :content, "Question" %><br />
    <%= f.text_area :content %><br />
    <%= radio_button_tag(:"question_type", "single_answer", false, :class => "question_type_single_answer") %> 
    <%= label_tag(:"question_type_single_answer", "Single answer") %>
    <%= radio_button_tag(:"question_type", "multiple_answer", false, :class => "question_type_multiple_answer") %>
    <%= label_tag(:"question_type}_multiple_answer", "Multiple answers") %>
    <%= radio_button_tag(:"question_type", "free_answer", false, :class => "question_type_free_answer") %> 
    <%= label_tag(:"question_type_free_answer", "Free answer") %><br />
    <%= f.hidden_field :_destroy %>
    <%= button_to "Remove Question", '#', class: "remove_fields btn btn-danger", :method => :get %>
    <%= f.fields_for :answers do |builder| %>
        <%= render 'answer_fields', f: builder %>
    <% end %>
    <%= link_to_add_answers "Add Answer", f, :answers %>
</fieldset>
